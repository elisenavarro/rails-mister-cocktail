  <div class="container">
    <h1>Cocktail Bars bring people <strong>together</strong>!</h1>
    <p>Come in and have a drink</p>
  </div>
</div>


<div class="container">
  <h1>Cocktails Menu</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo.url.nil? %>
      <div class= "card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80)">
          <!-- need link to cocktail show -->
          <img src="https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80" alt="Cocktail">
          <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        </div>
      </div>
    <% else %>
      <div class= "card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_tag cocktail.photo, height: 100, width: 200, crop: :fill %>)">
          <!-- need link to cocktail show -->
          <!-- cl_image_tag cocktail.photo, height: 100, width: 200, crop: :fill %> -->
          <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
  <p><%= link_to "Create New Cocktail", new_cocktail_path %></p>
</div>
