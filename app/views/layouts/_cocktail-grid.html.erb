<div class="cards-grid">
  <% @cocktails.each do |cocktail| %>
    <div class="card-cocktail">
      <% link_to cocktail_path(cocktail) do %>
      <!-- Cocktail Image -->
        <div class= "card-cocktail-img">
          <% if cocktail.photo.url.nil? %>
            <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80)">
          <% else %>
            <div class="card-photo" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1486428263684-28ec9e4f2584?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=934&q=80)">
          <% end %>
            <%= cocktail.name.titleize %>
            </div>
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>
        <% end %>
      </div>
      <!-- Cocktail Details -->
      <div class= "card-description" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_tag cocktail.photo, height: 100, width: 200, crop: :fill %>)">
        <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
      </div>
    </div>
 <% end %>
</div>
